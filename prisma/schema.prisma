generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./jobs.db"
}

model JobPosting {
  id          String   @id
  title       String
  company     String
  location    String
  url         String   @unique
  description String?
  salary      String?
  appliedAt   DateTime?
  status      String   // 'found', 'applied', 'skipped', 'error'
  isEasyApply Boolean  @default(true)
  errorMessage String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("job_postings")
}

model ApplicationSession {
  id                        String   @id @default(cuid())
  startTime                 DateTime @default(now())
  endTime                   DateTime?
  totalJobsFound            Int      @default(0)
  totalApplicationsSubmitted Int      @default(0)
  totalSkipped              Int      @default(0)
  totalErrors               Int      @default(0)
  searchConfig              String   // JSON string of search configuration

  @@map("application_sessions")
}
